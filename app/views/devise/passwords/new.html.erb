<div class="small-12 columns">

<h1>Forgot your password?</h1>

<%= form_for(resource, as: resource_name, url: password_path, html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.input_div :email, field: { autofocus: true } %>

  <%= f.submit "Send me reset password instructions", class: "button radius" %>

<% end %>

<%= render "devise/shared/links" %>

</div>