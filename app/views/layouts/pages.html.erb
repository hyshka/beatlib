<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">

  <%= 
    # force Internet Explorer to use the latest rendering engine available 
  %>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  
  <title>BeatLib</title>
  
  <%= 
    # mobile meta
  %>
  <meta name="HandheldFriendly" content="True">
  <meta name="MobileOptimized" content="320">
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  
  <%= 
    # scripts and styles
  %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  
</head>
<body itemscope itemtype="http://schema.org/WebPage">

  <div id="container">
  
    <header class="header cf" role="banner" itemscope itemtype="http://schema.org/WPHeader">
      <p id="logo" class="" itemscope itemtype="http://schema.org/Organization"><%= link_to 'BeatLib', root_path %></h1>

      <%= render 'layouts/navigation' %>
    </header>

    <div id="content">
      <div id="messages">
        <%= 
          # render 'layouts/messages' 
        %>
      </div>
      
      <div class="entry-content">
        <%= yield %>
      </div>
    </div>

    <!--
    <footer class="footer" role="contentinfo" itemscope itemtype="http://schema.org/WPFooter">
      <ul>
        <li><%=  link_to 'Terms of Use', page_path('terms-of-use') %></li>
      </ul>
    </footer>
    -->
    
  </div>
</body>
</html>
