<tr>
  <td><%= link_to Beat.find(favorite.beat_id).title, beat_path(Beat.find(favorite.beat_id)) %></td>
  <td><%= Beat.find(favorite.beat_id).tags.first.to_s.titleize %></td>
  <td><%= Beat.find(favorite.beat_id).downloads %></td>
  <td><%= Favorite.all.where(beat_id: favorite.beat_id).size %></td>
  <td><%= Beat.find(favorite.beat_id).comments.size %></td>
  <% if user_signed_in? && favorite.user_id.to_s == current_user.id.to_s %>
    <td><%= link_to [favorite.user, favorite],
            method: :delete,
            remote: true,
            class: 'delete-btn',
            data: { confirm: 'Are you sure?' } do %>
    <span class="fa fa-trash-o"></span>&nbsp;Delete
    <% end %></td>
  <% end %>
</tr>